{
  "app": {
    "name": "microTool",
    "version": "0.0.680",
    "description": "Control and image micro-particles.",
    "icon": "fa5.camera",
    "icon_color": "#FF4444"
  },
  "toolbar": {
    "icons": {
      "Start Live Stream": {
        "icon": "fa5.play-circle",
        "cmd": "start_stream",
        "tooltip": "Start Live Stream"
      },
      "Stop Live Stream": {
        "icon": "fa5.stop-circle",
        "cmd": "stop_stream",
        "tooltip": "Stop Live Stream"
      },
      "Start Recording": {
        "icon": "fa5.dot-circle",
        "cmd": "start_recording",
        "tooltip": "Start Recording Live Stream",
        "Stop Recording": {
          "icon": "fa5.stop-circle",
          "cmd": "stop_recording",
          "tooltip": "Stop Recording",
          "icon_color": "#FF4444"
        }
      },
      "Snapshot": {
        "icon": "fa5s.camera",
        "cmd": "snapshot",
        "tooltip": "Snapshot"
      }
    }
  },
  "status_bar": {
    "labels": {
      "camera_model": "No Camera",
      "roi_data": "0x0",
      "framerate": "@ 0 Hz",
      "image_size_on_disk": "0.00 MB",
      "streaming_bandwidth": "0.00 MB/s"
    }
  },
  "image_display": {
    "min_width": 640,
    "min_height": 480
  },
  "roi": {
    "input_width": 60,
    "width": {
      "min": 1,
      "max": 2048,
      "step": 1,
      "default": 2048
    },
    "height": {
      "min": 1,
      "max": 2048,
      "step": 1,
      "default": 2048
    },
    "offset_x": {
      "min": 0,
      "max": 2048,
      "step": 1,
      "default": 0
    },
    "offset_y": {
      "min": 0,
      "max": 2048,
      "step": 1,
      "default": 0
    }
  }
}
